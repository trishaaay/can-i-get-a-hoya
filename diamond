#include<stdio.h>
int main() {
    int n,l,m,o;
    printf("enter range");
    scanf("%d",&n);
    for(int i=1;i<=n;i++){
        for(int k=1;k<=n-i;k++){
            printf(" ");
        }
        for(int j=1;j<=i;j++){
            printf("* ");
        }
        printf(" \n");
    }

    for(l=n-1;l>=1;l--){
        for(m=1;m<=n-l;m++){
            printf(" ");
        }
        for(o=l;o>=1;o--){
            printf("* ");
        }
        printf("\n");
    }
        return 0;
    }

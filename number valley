#include<stdio.h>
int main() {
    int n,i,j,k;
    printf("enter range");
    scanf("%d",&n);
    for(i=1;i<=n;i++){
        if(i<n){
        for(j=1;j<=i;j++){
            printf("%d ",j);
        }
        }else if(i==n){
                for(i=1;i<=n-1;i++){
                    printf("%d ",i);
                }
            }
        for(k=n-i;k>=1;k--){
            printf("  ");
        }
        for(k=n-i;k>=2;k--){
            printf("  ");
        }
        for(j=i;j>=1;j--){
            printf("%d ",j);
        }
        printf("\n");
    }
    
        return 0;
    }
